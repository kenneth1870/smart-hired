<h2>Sign up</h2>
<div class="row">
  <div class="contact-form col-12 col-md-6">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Your email" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Your password"%>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Your password confirmation" %>
    </div>
    <br>
    <div class="form-group">
      <%= f.select :roles, ["Candidate", "Recruiter", "Admin"],{ promot: "Role?"}, {class: "form-control"}%>
    </div>

    <br>
    <div id="cf-submit">
      <%= f.submit "Sign up", class: "btn btn-transparent", id:"contact-submit" %>
    </div>
  <% end %>

</div>
</div>

<%= render "devise/shared/links" %>
